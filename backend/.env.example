PORT=3001
LOG_LEVEL=error

# Ippon custodial wallet API base URL
IPPON_BASE=https://ippon.minibits.cash/v1

# Comma-separated list of allowed CORS origins
CORS_ORIGIN=https://recovery.minibits.cash,http://localhost:3000

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_RECOVERY_MAX=5
RATE_LIMIT_WINDOW='1 minute'

# Max recovery limits
MAX_BATCHES=50
MAX_BATCH_SIZE=100

# NUT-24 payment guard
# Comma-separated mint URLs accepted as payment; leave empty to accept any mint
PAYMENT_MINT_URLS=https://mint.minibits.cash/Bitcoin
PAYMENT_AMOUNT_SAT=100
# Number of free recoveries allowed per window before payment is required
PAYMENT_FREE_REQUESTS=1
# Payment window duration in milliseconds (default: 3600000 = 1 hour)
PAYMENT_WINDOW_MS=3600000
# Ippon wallet access key that collects incoming payment tokens (create one via POST /v1/wallet on ippon.minibits.cash)
PAYMENT_COLLECTION_ACCESS_KEY=
